<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- main color -->
    <item>
        <shape>
            <solid android:color="#000" />
        </shape>
    </item>

    <!-- draw another block to cut-off the left and right bars -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:top="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="#FFF" />
        </shape>
    </item>
</layer-list>
