<resources>

    <!-- Base application theme. -->
    <style name="SrTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@drawable/back_gradient</item>
        <item name="android:textColorPrimary">@color/TextPrimary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="MenuLateral">
        <item name="android:background">@drawable/back_menu</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>
    <style name="Toolbar">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="TabLayout">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@drawable/back_tabmenu_despesas</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="subTitle" parent="Title1">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="Title1">
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/TextPrimary</item>
    </style>

    <style name="Title2" parent="Title1">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Title3" parent="Title1">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Body" parent="Title1">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Body2" parent="Body">
        <item name="android:textColor">#666669</item>
    </style>
    <style name="Bottom">
        <item name="android:background">@drawable/button_layout</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="BottomTrans">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/TextPrimary</item>
    </style>
    <style name="ButtomAddItem">
        <item name="android:background">@drawable/button_calc</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="menuStyle" parent="SrTheme.NoActionBar">
        <item name="android:textColor">@color/TextMenu</item>
    </style>
    <style name="editAdd">
        <item name="android:background">@drawable/edit_text_add_design</item>
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minEms">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="item_list">
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FiltroCancel">
        <item name="android:background">#aa585858</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">#bb323232</item>
        <item name="android:drawableRight">@drawable/ic_cancel_black</item>
        <item name="android:drawableEnd">@drawable/ic_cancel_black</item>
    </style>
    <style name="DespesaMensal">
        <item name="android:textColor">@color/TextPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="ProBarOrcament" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint"> #FFF</item>
        <item name="android:progressBackgroundTint">#000</item>
    </style>
    <style name="editTextClick">
        <item name="android:inputType">none</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SrTheme.AppCompat.Light.NoActionBar" parent="SrTheme" />

    <style name="SrTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SrTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SrTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>