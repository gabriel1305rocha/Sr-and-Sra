<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SrTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="actionBarSize">50dp</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/BackColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/BackColor</item>
    </style>

    <style name="Title1">
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/TextPrimary</item>
    </style>

    <style name="Title2" parent="Title1">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Title3" parent="Title1">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Body" parent="Title1">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="Bottom">
        <item name="android:background">@color/MenuLateral</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="menuStyle" parent="SrTheme.NoActionBar">
        <item name="android:textColor">@color/TextMenu</item>
    </style>

    <style name="SrTheme.AppCompat.Light.NoActionBar" parent="SrTheme" />

    <style name="SrTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SrTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SrTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>