<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fourcodes.srsra.Sobre"
    tools:showIn="@layout/app_bar_sobre"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_Sobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"
                android:text="@string/title_sobre"
                style="@style/Title2" />
            <LinearLayout
                android:id="@+id/versao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_Sobre"
                android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/ver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/versao"
                    style="@style/Title3" />
                <TextView
                    android:id="@+id/versaoNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/versaoNum"
                    style="@style/Title3"/>
            </LinearLayout>

            <TextView
                android:id="@+id/desenvolvedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/versao"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/desenvolvedor"
                style="@style/Title2" />
            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desenvolvedor"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/logo"/>
            <Button
                android:id="@+id/termo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:onClick="TermoDeUso"
                android:text="@string/termoUso"
                style="@style/BottomTrans"
                />
            <Button
                android:id="@+id/manualUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/termo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/manualUser"
                style="@style/BottomTrans" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>