<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_gradient">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/scrollView3"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/scl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Title2"
                android:layout_marginRight="78dp"
                android:layout_marginEnd="50dp">

                <TextView
                    android:id="@+id/lblCadastrese"
                    style="@style/Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="@string/cadastre_se" />

                <EditText
                    android:id="@+id/txtNome"
                    style="@style/Title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lblCadastrese"
                    android:layout_marginTop="47dp"
                    android:drawableLeft="@drawable/ic_menu_edit"
                    android:drawableStart="@drawable/ic_menu_edit"
                    android:ems="10"
                    android:hint="Digite seu nome:"
                    android:inputType="textPersonName"
                    tools:ignore="RtlHardcoded" />

                <EditText
                    android:id="@+id/txtEmail"
                    style="@style/Title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:drawableLeft="@drawable/ic_menu_compose"
                    android:ems="10"
                    android:hint="@string/e_mail"
                    android:inputType="textEmailAddress"
                    tools:ignore="RtlHardcoded"
                    android:layout_below="@+id/txtNome"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/txtSenha"
                    style="@style/Title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@drawable/ic_menu_login"
                    android:ems="10"
                    android:hint="Senha"
                    android:inputType="textPassword"
                    tools:ignore="HardcodedText,RtlHardcoded"
                    android:layout_below="@+id/txtEmail"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:id="@+id/txtCSenha"
                    style="@style/Title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:drawableLeft="@drawable/ic_menu_login"
                    android:ems="10"
                    android:hint="@string/confirme_a_senha"
                    android:inputType="textPassword"
                    tools:ignore="RtlHardcoded"
                    android:layout_below="@+id/txtSenha"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/Continuar"
                    style="@style/Bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="51dp"
                    android:onClick="onClickContinua"
                    android:layout_below="@+id/txtCSenha"
                    android:text="@string/continuar" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
