<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fourcodes.srsra.CadastroFacebook"
    android:background="@drawable/back_gradient">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/scl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/Title2"
                    android:layout_marginRight="78dp"
                    android:layout_marginEnd="50dp">

                    <TextView
                        android:id="@+id/lblDados"
                        style="@style/Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dados"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="13dp" />

                    <Button
                        android:id="@+id/btnContinue"
                        style="@style/Title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txtData"
                        android:layout_alignStart="@+id/txtData"
                        android:layout_below="@+id/txtData"
                        android:layout_marginLeft="55dp"
                        android:layout_marginStart="55dp"
                        android:layout_marginTop="81dp"
                        android:text="Continuar"
                        tools:layout_editor_absoluteX="120dp"
                        tools:layout_editor_absoluteY="430dp" />

    <EditText
        android:id="@+id/txtData"
        style="@style/Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_menu_my_calendar"
        android:ems="10"
        android:hint="Data do Casamento"
        android:inputType="date"
        tools:layout_editor_absoluteY="316dp"
        tools:layout_editor_absoluteX="55dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/txtNomeNoivo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

                    <EditText
                        android:id="@+id/txtNomeNoiva"
                        style="@style/Title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/txtNomeNoivo"
                        android:layout_alignStart="@+id/txtNomeNoivo"
                        android:layout_below="@+id/lblDados"
                        android:layout_marginTop="73dp"
                        android:drawableLeft="@drawable/ic_menu_edit"
                        android:ems="10"
                        android:hint="Nome do Noiva"
                        android:inputType="textPersonName"
                        tools:layout_editor_absoluteX="55dp"
                        tools:layout_editor_absoluteY="248dp" />

                    <EditText
                        android:id="@+id/txtNomeNoivo"
                        style="@style/Title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNomeNoiva"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="23dp"
                        android:drawableLeft="@drawable/ic_menu_edit"
                        android:ems="10"
                        android:hint="Nome da Noivo"
                        android:inputType="textPersonName"
                        tools:layout_editor_absoluteX="55dp"
                        tools:layout_editor_absoluteY="182dp" />
                </RelativeLayout>
            </RelativeLayout>
    </ScrollView>



</RelativeLayout>
