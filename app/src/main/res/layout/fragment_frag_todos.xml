<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fourcodes.srsra.FragConvConvites">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="0dp"
                android:layout_marginEnd="50dp"
                android:id="@+id/relativeLayout">

            </RelativeLayout>

            <TextView
                android:id="@+id/lblDoNoivo"
                style="@style/Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="Do Noivo"
                android:layout_below="@+id/lblDaNoiva"
                android:layout_alignRight="@+id/lblDoCasal"
                android:layout_alignEnd="@+id/lblDoCasal" />
            <ImageView
                android:id="@+id/lin_reta1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/lblDoNoivo"
                android:contentDescription="linha"
                android:src="@drawable/lin_reta"/>

            <TextView
                android:id="@+id/lblDaNoiva"
                style="@style/Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Da Noiva"
                android:layout_marginTop="42dp"
                android:layout_alignLeft="@+id/lblDoNoivo"
                android:layout_alignStart="@+id/lblDoNoivo" />
            <ImageView
                android:id="@+id/lin_reta2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/lblDaNoiva"
                android:contentDescription="linha"
                android:src="@drawable/lin_reta"/>

            <TextView
                android:id="@+id/lblDoCasal"
                style="@style/Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:text="Do Casal"
                android:layout_below="@+id/lblDoNoivo"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/lin_reta3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/lblDoCasal"
                android:contentDescription="linha"
                android:src="@drawable/lin_reta"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
