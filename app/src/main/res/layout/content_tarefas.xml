<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fourcodes.srsra.Tarefas"
    tools:showIn="@layout/app_bar_tarefas">

    <TextView
        android:id="@+id/tituloTarefa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        style="@style/Title2"
        android:text="Um ano antes"/>
    <ImageView
        android:id="@+id/lin_reta"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/tituloTarefa"
        android:contentDescription="linha"
        android:src="@drawable/lin_reta"/>
    <ListView
        android:id="@+id/list_tarefas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin_reta"
        />



</RelativeLayout>