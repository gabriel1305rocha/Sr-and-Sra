<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fourcodes.srsra">

    <!--
        Usar seguinte código para não mostrar Menu de Cima na respectiva Activity
        android:theme="@style/SplashTheme"
    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:logo="@mipmap/logo"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity
            android:name=".Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Inicio"
            android:label="@string/dadosNoivo" />
        <activity
            android:name=".Dados"
            android:theme="@style/SplashTheme" />
        <activity
            android:name=".MenuLateral"
            android:label="@string/title_activity_menu_lateral"
            android:parentActivityName=".Inicio"
            android:theme="@style/menuStyle">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fourcodes.srsra.Inicio" />
        </activity>
        <activity android:name=".Cadastro" />
    </application>

</manifest>